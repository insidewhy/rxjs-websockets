{
  "name": "rxjs-websockets",
  "version": "8.0.0",
  "description": "rxjs 6 websockets library",
  "main": "lib.es5/index.js",
  "module": "lib.es5m/index.js",
  "es2015": "lib.es2015/index.js",
  "typings": "lib.es2015/index",
  "repository": {
    "type": "git",
    "url": "git://github.com/ohjames/rxjs-websockets.git"
  },
  "keywords": [
    "angular",
    "angular2",
    "redux",
    "redux-observable",
    "rxjs",
    "vuex",
    "websocket",
    "websockets"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "build": "yarn build:modern && yarn build:es5 && yarn build:es5 -m es2015 --outDir lib.es5m",
    "build:modern": "tsc -p src/tsconfig.json",
    "build:es5": "tsc -p src/tsconfig.es5.json",
    "build:watch": "tsc -w -p src/tsconfig.es5.json",
    "lint": "eslint 'src/*.ts'",
    "validate-prettiness": "prettier -c 'src/*.ts'",
    "test": "yarn build && yarn mocha",
    "validate": "yarn test && yarn lint && yarn validate-prettiness",
    "watch": "yarn build:es5 && concurrently 'yarn build:watch' 'yarn mocha:watch'",
    "mocha": "mocha lib.es5/*.spec.js",
    "mocha:watch": "yarn mocha -w"
  },
  "author": "James Pike <github@chilon.net>",
  "license": "ISC",
  "peerDependencies": {
    "rxjs": "^6.1.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.3",
    "@types/mocha": "5.2.7",
    "@types/sinon": "7.0.13",
    "@types/sinon-chai": "3.2.3",
    "@typescript-eslint/eslint-plugin": "2.3.1",
    "@typescript-eslint/parser": "2.3.1",
    "chai": "4.2.0",
    "concurrently": "4.1.2",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.3.0",
    "husky": "3.0.7",
    "mocha": "6.2.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "rxjs": "6.5.3",
    "sinon": "7.5.0",
    "sinon-chai": "3.3.0",
    "typescript": "3.6.3"
  }
}
